{
  "name": "minecraft-resourcepack-helper",
  "displayName": "Minecraft Resourcepack Helper",
  "publisher": "stone926",
  "author": {
    "name": "hans000"
  },
  "contributors": [
    "stone926",
    "hans000"
  ],
  "description": "To help minecraft developers create resource packs more efficiently",
  "version": "1.1.8",
  "engines": {
    "vscode": "^1.66.0"
  },
  "icon": "icon.png",
  "categories": [
    "Linters",
    "Other"
  ],
  "repository": {
    "url": "https://github.com/stone926/minecraft-resourcepack-helper",
    "type": "git"
  },
  "activationEvents": [
    "*"
  ],
  "keywords": [
    "minecraft",
    "resourcepack",
    "resource pack",
    "helper",
    "assets helper",
    "mc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".mcmeta"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "pack.mcmeta",
        "url": "./assets/linters/pack.mcmeta.json"
      },
      {
        "fileMatch": "**/blockstates/*.json",
        "url": "./assets/linters/blockstates.json"
      },
      {
        "fileMatch": "**/models/block/**/*.json",
        "url": "./assets/linters/models-block.json"
      },
      {
        "fileMatch": "**/models/item/**/*.json",
        "url": "./assets/linters/models-item.json"
      },
      {
        "fileMatch": "**/*.png.mcmeta",
        "url": "./assets/linters/animation.mcmeta.json"
      }
    ],
    "commands": [
      {
        "command": "McResHelper.openDefaultMcAssetsPath",
        "title": "McResHelper: 打开原版材质所在文件夹"
      }
    ],
    "configuration": {
      "title": "Minecraft Resourcepack Helper",
      "properties": {
        "McResHelper.defaultMcAssetsPath": {
          "type": [
            "string",
            "null"
          ],
          "description": "指定minecraft材质的默认路径，用于跳转到原版材质，请使用绝对路径，起点为`minecraft`文件夹所在的目录",
          "default": null
        },
        "McResHelper.TipColorForUndefinedTextureVariables": {
          "type": "string",
          "description": "model文件中，引用的#开头的材质变量未在texture部分中定义时，该变量被高亮的颜色",
          "default": "Chartreuse"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "push": "git push origin master && git push github master"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.25",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.3",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "@humanwhocodes/momoa": "^2.0.4"
  }
}
